{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@lib/*": [
        "lib/*"
      ],
      "@data-template/*": [
        "data-template/*"
      ],
      "@games-info": [
        "games-info"
      ],
      "@games-info/*": [
        "games-info/*"
      ],
      "@custom-types/*": [
        "custom-types/*"
      ],
      "@store/*": [
        "store/*"
      ],
      "@store": [
        "store"
      ],
      "@theme/*": [
        "theme/*"
      ],
      "@custom-types": [
        "custom-types"
      ],
      "@reducers/*": [
        "store/reducers/*"
      ],
      "@scss/*": [
        "scss/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@global-config/*": [
        "config/*"
      ]
    },
    "allowJs": true,
    "sourceMap": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,

    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports":true,
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
